@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BookStore.ViewModels.Book.BookFormModel
@{
	ViewBag.Title = "Create Book";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="container">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Title" class="form-label-add-edit">Title</label>
                <input asp-for="@Model.Title" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Title" class="text-danger"></span>
            </div>
	        <div class="mb-3">
		        <label asp-for="@Model.Author" class="form-label-add-edit">Author</label>
		        <textarea asp-for="@Model.Author" class="form-control" aria-required="true" rows="5"></textarea>
		        <span asp-validation-for="@Model.Author" class="text-danger"></span>
	        </div>
	        <div class="mb-3">
		        <label asp-for="@Model.Publisher" class="form-label-add-edit">Publisher</label>
		        <input asp-for="@Model.Publisher" class="form-control" aria-required="true" />
		        <span asp-validation-for="@Model.Publisher" class="text-danger"></span>
	        </div>
            <div class="mb-3">
                <label asp-for="@Model.PublicationYear" class="form-label-add-edit">Publication Year</label>
                <input asp-for="@Model.PublicationYear" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.PublicationYear" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Price" class="form-label-add-edit">Price</label>
                <input asp-for="@Model.Price" class="form-control" aria-required="true" rows="5" />
                <span asp-validation-for="@Model.Price" class="text-danger"></span>
            </div>
	        <div class="mb-3">
                <input class="btn btn-warning mb-2 w-100" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}